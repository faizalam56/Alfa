<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            // #Designation
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardUseCompatPadding="true"
                android:layout_marginTop="0dp">

                <EditText
                    android:id="@+id/idDesignationET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/White"
                    android:hint="Job Designation"
                    android:padding="@dimen/horizontal_margin_small"
                    android:singleLine="true"></EditText>
            </android.support.v7.widget.CardView>
            // #Company
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardUseCompatPadding="true"
                android:layout_marginTop="0dp">

                <EditText
                    android:id="@+id/idCompanyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/White"
                    android:hint="Company"
                    android:padding="@dimen/horizontal_margin_small"
                    android:singleLine="true"></EditText>
            </android.support.v7.widget.CardView>
            // #YEAR
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    card_view:cardUseCompatPadding="true"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/idJoinYearJobET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/horizontal_margin_small"
                        android:layout_weight="1"
                        android:background="@color/White"
                        android:hint="Joining Year"
                        android:inputType="number"
                        android:padding="@dimen/horizontal_margin_small"
                        android:singleLine="true"></EditText>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    card_view:cardUseCompatPadding="true"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/idFinalYearJobET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/horizontal_margin_small"
                        android:layout_weight="1"
                        android:background="@color/White"
                        android:hint="Final Year"
                        android:inputType="number"
                        android:padding="@dimen/horizontal_margin_small"
                        android:singleLine="true"></EditText>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>