<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.senzec.alfa.activity.AddJobActivity"
    android:padding="0dp"
    android:weightSum="5">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:background="@color/colorBlack">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="58dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_back"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="@dimen/vertical_margin_small"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add job"
                android:layout_centerInParent="true"
                android:textColor="@color/colorYellow"
                android:textSize="24sp"/>
            <com.senzec.alfa.utils.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/img_profile"
                />
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:padding="5dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JOB DETAILS"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <android.support.v7.widget.CardView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardUseCompatPadding="true">

                        <EditText
                            android:id="@+id/et_job_profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/White"
                            android:hint="Job Profile"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardUseCompatPadding="true">

                        <EditText
                            android:id="@+id/et_job_department"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/White"
                            android:hint="Job Department"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardUseCompatPadding="true">

                        <EditText
                            android:id="@+id/et_salary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/White"
                            android:hint="Salary Range"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardUseCompatPadding="true">

                        <EditText
                            android:id="@+id/et_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/White"
                            android:hint="Location"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardUseCompatPadding="true">

                        <EditText
                            android:id="@+id/et_work_experience"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/White"
                            android:hint="Work Experience"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardUseCompatPadding="true">

                        <EditText
                            android:id="@+id/et_company_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/White"
                            android:hint="Company Name"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardUseCompatPadding="true">

                        <EditText
                            android:id="@+id/et_email_contact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/White"
                            android:hint="Email For Contact"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardUseCompatPadding="true">

                        <EditText
                            android:id="@+id/et_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/White"
                            android:hint="Description"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardUseCompatPadding="true">

                       <com.senzec.alfa.multiselectspinner.MultiSpinnerSearch
                           android:id="@+id/spnr_groupName"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:entries="@array/groupname"
                           android:background="@color/White"
                           android:textAppearance="?android:attr/textAppearanceMedium"
                           android:padding="10dp"
                           app:hintText="Select group">

                       </com.senzec.alfa.multiselectspinner.MultiSpinnerSearch>

                    </android.support.v7.widget.CardView>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                card_view:cardUseCompatPadding="true">

                <Button
                    android:id="@+id/btn_add_job"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorYellow"
                    android:text="+ ADD"
                    android:padding="10dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"/>

            </android.support.v7.widget.CardView>
        </LinearLayout>

    </FrameLayout>

</LinearLayout>
