<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
           >
            // #1
             <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                 android:paddingTop="@dimen/horizontal_margin_small"
                 android:paddingLeft="@dimen/horizontal_margin_small"
                 android:paddingRight="@dimen/horizontal_margin_small">
                <com.senzec.alfa.utils.CircleImageView
                    android:id="@+id/idProfile"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/img_profile"
                    />
                <TextView
                    android:id="@+id/idPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="iOS Developer,"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/horizontal_margin"
                    />
                    <TextView
                        android:id="@+id/idDept"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="IT"
                        android:textSize="20sp"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorYellow"
                        android:layout_marginLeft="@dimen/horizontal_margin_small"
                        />
                </LinearLayout>
            // #2
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:paddingLeft="@dimen/horizontal_margin_small"
                android:paddingRight="@dimen/horizontal_margin_small"
                android:layout_marginTop="@dimen/horizontal_margin">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="7">
                    // Price
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal|center_vertical">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_price_with_hand"
                            android:scaleType="fitXY"
                            />
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_rupee"
                            android:scaleType="fitXY"
                            android:layout_marginLeft="@dimen/horizontal_margin_small"
                            />
                        <TextView
                            android:id="@+id/idPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20,000"
                            android:textColor="@color/colorBlack"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            />
                    </LinearLayout>
                    // Location
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_location"
                            android:scaleType="fitXY"
                            />
                        <TextView
                            android:id="@+id/idAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Delhi, India"
                            android:textColor="@color/colorBlack"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:layout_marginLeft="@dimen/horizontal_margin_small"/>
                    </LinearLayout>
                    // Year
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_job_box"
                            android:scaleType="fitXY"
                            />
                        <TextView
                            android:id="@+id/idYear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 Years"
                            android:textColor="@color/colorBlack"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:layout_marginLeft="@dimen/horizontal_margin_small"/>
                    </LinearLayout>
                </LinearLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_weight="3">
                    <Button
                        android:id="@+id/idSendCV"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Send CV"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textAllCaps="false"
                        android:layout_gravity="center"
                        android:background="@drawable/button_shape_sendcv"/>
                </FrameLayout>
            </LinearLayout>
            // #3
            // Bottom - Reply, Share
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingTop="1dp"
                android:paddingBottom="0dp"
                android:layout_marginTop="@dimen/vertical_margin_small"
                android:background="@color/gray">
                <LinearLayout
                    android:id="@+id/idReplyLayout"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@color/White"
                    android:gravity="center_horizontal|center_vertical">
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_reply_gn"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reply"
                    android:textColor="@color/colorBlack"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_marginLeft="@dimen/horizontal_margin_small"/>
                    </LinearLayout>
                <LinearLayout
                    android:id="@+id/idShareLayout"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:background="@color/White"
                    android:gravity="center_horizontal|center_vertical">
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_share_gn"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share"
                        android:textColor="@color/colorBlack"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:layout_marginLeft="@dimen/horizontal_margin_small"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>