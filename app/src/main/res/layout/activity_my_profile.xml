<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content"
    android:orientation="vertical"
    android:weightSum="10"
    android:padding="@dimen/horizontal_margin"
    tools:context="com.senzec.alfa.activity.MyProfileActivity">
    // #TOP
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_my_profile"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/idBackIV"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:layout_marginTop="@dimen/vertical_margin_small"
            android:layout_marginLeft="@dimen/vertical_margin_small"
            />
        <ImageView
            android:id="@+id/idEditProfileIV"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_edit"
            android:layout_marginTop="@dimen/vertical_margin_small"
            android:layout_marginRight="@dimen/vertical_margin_small"
            android:layout_gravity="top|right"/>
    </FrameLayout>
    // #LAYOUT-1
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/vertical_margin">
    // #1
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="@dimen/size_two"
        android:layout_marginBottom="@dimen/size_two"
        android:padding="@dimen/horizontal_margin_small">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_info"/>
        <TextView
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enquiries"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:textStyle="bold"
            />
        </LinearLayout>
        <ImageView

            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="right"
            android:src="@drawable/ic_right_arrow"
            />
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorYellow"
            />
    // #2
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="@dimen/size_two"
        android:layout_marginBottom="@dimen/size_two"
        android:padding="@dimen/horizontal_margin_small">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_company"/>
            <TextView
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Companies"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="@dimen/horizontal_margin"
                android:textStyle="bold"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="right"
            android:src="@drawable/ic_right_arrow"
            />
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorYellow"
            />
    // #3
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="@dimen/size_two"
        android:layout_marginBottom="@dimen/size_two"
        android:padding="@dimen/horizontal_margin_small">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_invite_member"/>
            <TextView
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invite Members"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="@dimen/horizontal_margin"
                android:textStyle="bold"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="right"
            android:src="@drawable/ic_right_arrow"
            />
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorYellow"
            />
    </LinearLayout>
    // #LAYOUT-2
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_marginBottom="4dp">
    // #upload cv
    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardElevation="2dp"
        card_view:cardBackgroundColor="@color/colorYellow"
        card_view:cardCornerRadius="0dp"
        card_view:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:id="@+id/idUploadCv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/White"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="@dimen/horizontal_margin_small">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_pdf"
                />
            <TextView
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload CV"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textAllCaps="true"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
    // #create job
    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardElevation="2dp"
        card_view:cardBackgroundColor="@color/colorYellow"
        card_view:cardCornerRadius="0dp"
        android:layout_marginTop="4dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/idCreateJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="@dimen/horizontal_margin_small">

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="+" />
            <TextView
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Job"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textAllCaps="true"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
        </LinearLayout>
</LinearLayout>
